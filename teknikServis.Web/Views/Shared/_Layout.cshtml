<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

    <!-- Bootstrap ve FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            padding-top: 56px;
            background-color: #1e1e2f;
            margin: 0;
            color: #FFF2F2;
        }

        .navbar {
            background-color: #181828;
        }

        .navbar-brand {
            font-size: 1.4rem;
            font-weight: bold;
            color: #f8f9fa;
        }

        .navbar-nav .nav-link {
            color: #ddd;
            transition: 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #fff;
            }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index">Teknik Servis</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index"><i class="fa-solid fa-house"></i> Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About"><i class="fa-solid fa-box"></i> Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contacts"><i class="fa-solid fa-users"></i> Müşteriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa-solid fa-wrench"></i> Servisler</a>
                    </li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin", new { @class = "nav-link text-danger" })</li>
                        <li class="nav-item">@Html.ActionLink("UserAdmin", "Index", "UsersAdmin", new { @class = "nav-link text-danger" })</li>
                    }
                </ul>
                <ul class="navbar-nav ml-auto ">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <!-- ANA İÇERİK -->
    <div class="container body-content">

        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Date.Year -- The World Is Yours --</p>
            <address class="text-center">
                Teknik Servis Caddesi, No:123 İstanbul/Türkiye  <br />
                +90 212 123 45 67 <br /> info@teknikservis.com

                <br /> Pazartesi - Cumartesi: 09:00 - 18:00


            </address>
        </footer>
    </div>

    <!-- JavaScript Bağlantıları - BİRDEN FAZLA JQUERY VE BOOTSTRAP YÜKLEMESİ KALDIRILDI -->
    <!-- Sadece bir set jQuery ve Bootstrap kullanın, çakışmaları önlemek için -->
    <!-- Eğer bundler kullanıyorsanız, bunları kullanın: -->
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@

    <!-- VEYA CDN kullanıyorsanız, bunları kullanın (yukarıdakileri yoruma alın): -->
    <!--


    -->
    <!-- Bootstrap 5 için özel toggle script -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navbarToggler = document.querySelector('.navbar-toggler');
            const navbarCollapse = document.getElementById('navbarNav');

            navbarToggler.addEventListener('click', function () {
                if (navbarCollapse.classList.contains('show')) {
                    navbarCollapse.classList.remove('show');
                } else {
                    navbarCollapse.classList.add('show');
                }
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    // Bu kodu sayfanın en altına ekle
    console.log("Navbar debug başladı");

    // Toggler ve collapse elementlerini bul
    const toggler = document.querySelector('.navbar-toggler');
    const collapse = document.querySelector('.navbar-collapse');

    // Elementlerin var olup olmadığını kontrol et
    console.log("Toggler elementi:", toggler);
    console.log("Collapse elementi:", collapse);

    // Toggle işlemini takip et
    if (toggler) {
        toggler.addEventListener('click', function () {
            console.log("Toggler'a tıklandı");
            console.log("Toggle öncesi class listesi:", collapse.classList);

            // 100ms sonra class listesini tekrar kontrol et
            setTimeout(() => {
                console.log("Toggle sonrası class listesi:", collapse.classList);
            }, 100);
        });
    }

    // Sayfadaki tüm JavaScript kütüphanelerini listele
    console.log("Yüklü JavaScript kütüphaneleri:");
    document.querySelectorAll('script').forEach(script => {
        console.log(script.src || "Inline script");
    });
</script>
